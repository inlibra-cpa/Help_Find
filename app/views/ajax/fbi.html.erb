<h2>FBI Search</h2>
<br>
<b>
  <label>Valid Options</label>
</b>
     <br> <i>Column Sort: all, title, description, details, sex, race, id, hair color, weight, classification, url</i>
<div id='crud_operations_div'>

   <br><i>Enter Row ID To Load Database</i><br>
  <input id="fbi_api_word" type="number">
  <br>
  <div class="field">
    <select name="fbi" id="fbi_menu">
      <option value="">--Please choose an option--</option>
      <option value="all">All</option>
      <option value="title">Title</option>
      <option value="description">Description</option>
      <option value="details">Details</option>
      <option value="sex">Sex</option>
      <option value="race">Race</option>
      <option value="id">Id</option>
      <option value="hair color">Hair color</option>
      <option value="weight">Weight</option>
      <option value="classification">Classification</option>
      <option value="url">Url</option>
    </select>
</div>
  <br>
  <button id="fbi_api_button" type="button">Return results</button><br>
  <br>
  <div class="container">
    <label>File Entered Into Database</label>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Sex</th>
        <th>Race</th>
        <th>Age</th>
        <th>Hair Color</th>
        <th>Weight</th>
      </tr>
    </thead>
    <tbody id="read_missing_person_results_div">
    </tbody>
  </table>
  </div>
  <div class="container">
  <label>FBI Data returned</label>
  <table class="table">
    <thead>
      <tr>
        <th>ID Row </th>
        <th>Title</th>
        <th>Description</th>
        <th>Details</th>
        <th>Sex</th>
        <th>Race</th>
        <th>FBI ID</th>
        <th>Hair</th>
        <th>Weight</th>
        <th>URL</th>
        <th>Classification</th>
      </tr>
    </thead>
    <tbody id="fbi_results_div">
    </tbody>
  </table>
</div>

